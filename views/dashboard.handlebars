<div class="pastBlogs flex-column p-3">
    {{log users.blogs 'users.blogs'}}
    {{#each users.blogs as |blog|}}
    {{log id 'id'}}
    <div class="eachPastBlog border border-dark border-2 bg-success text-light d-flex flex-row align-items-center m-1 p-2 rounded">
        <h5 class="pastBlogTitle" data-title="{{blog.title}}" data-contents="{{blog.contents}}" data-id="{{id}}">
            {{blog.title}}
        </h5>
        <h6 class="ms-auto">
            {{ format_date blog.date}}
        </h6>
    </div>
    {{/each}}
</div>

<div class="existingBlogBox flex-column p-3">
    <div class="m-1 border border-dark border-4">
        <div class="bg-success d-flex flex-row p-2">
            <h4 class="text-light">
                Edit Post
            </h4>
        </div>
        <div class="p-3">
            <p>
                Title
            </p>
            <input class="existingBlogTitle w-100">

            </input>
            <p>
                Content
            </p>
            <textarea class="existingBlogText w-100">
                    
            </textarea>
            <br><br>
            <button class="updateBtn w-100 rounded">
                <b>UPDATE POST</b>
            </button>
            <br><br>
            <button class="deleteBtn w-100 rounded">
                <b>DELETE</b>
            </button>
        </div>
    </div>
</div>

<div class="postBox flex-column p-3">
    <div class="m-1 border border-dark border-4">
        <div class="bg-success d-flex flex-row p-2">
            <h4 class="text-light">
                Create New Post
            </h4>
        </div>
        <div class="p-3">
            <p>
                Title
            </p>
            <input class="blogTitle w-100">

            </input>
            <p>
                Content
            </p>
            <textarea class="blogText w-100">
                    
            </textarea>
            <br><br>
            <button class="createBtn w-100 rounded ">
                <b>CREATE</b>
            </button>
        </div>
    </div>
</div>
<div class="btnDiv flex-row justify-content-center">
    <button class="btn-lg bg-success mx-auto">
        + New Post
    </button>
</div>
    
<script src='/js/dashboard.js'></script>