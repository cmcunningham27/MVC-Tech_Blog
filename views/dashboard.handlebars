<div class="pastBlogs flex-column p-3">
    {{#each users.blog as |blog|}}
    <div class="eachPastBlog border border-dark border-4 bg-success d-flex flex-row m-1 p-2 rounded">
        <h4>
            {{blog.title}}
        </h4>
        <h6 class="ms-auto">
            {{ format_date blog.date}}
        </h6>
    </div>
    {{/each}}
</div>

<div class="postBox flex-column p-3">
    <div class="m-1 border border-dark border-4">
        <div class="bg-success d-flex flex-row p-2">
            <h4 class="text-light">
                Create New Post
            </h4>
        </div>
        <div class="p-3">
            <p>
                Title
            </p>
            <input class="blogTitle w-100">

            </input>
            <p>
                Content
            </p>
            <textarea class="blogText w-100">
                    
            </textarea>
            <br><br>
            <button class="commentBtn w-100 rounded ">
                <b>CREATE</b>
            </button>
        </div>
    </div>
</div>
<div class="btnDiv d-flex flex-row justify-content-center">
    <button class="btn-lg bg-success mx-auto">
        + New Post
    </button>
</div>
    
<script src='/js/dashboard.js'></script>